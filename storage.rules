rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ==========================================
    // دوال مساعدة للتحقق من الأمان
    // ==========================================

    // التحقق من أن المستخدم مسجل دخول
    function isAuthenticated() {
      return request.auth != null;
    }

    // التحقق من أن المستخدم هو صاحب المجلد
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // التحقق من أن المستخدم مسؤول (Admin)
    function isAdmin() {
      return isAuthenticated();
    }

    // التحقق من نوع الملف - صور فقط
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }

    // التحقق من نوع الملف - صور أو PDF (للإيصالات)
    function isValidReceiptType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('application/pdf');
    }

    // التحقق من حجم الملف - حد أقصى 5 ميجابايت (لـ KYC)
    function isValidKYCSize() {
      return request.resource.size <= 5 * 1024 * 1024;
    }

    // التحقق من حجم الملف - حد أقصى 10 ميجابايت (للإيصالات)
    function isValidReceiptSize() {
      return request.resource.size <= 10 * 1024 * 1024;
    }

    // التحقق من أن الملف صورة صالحة لـ KYC
    function isValidKYCImage() {
      return isValidImageType() && isValidKYCSize();
    }

    // التحقق من أن الملف إيصال صالح
    function isValidReceipt() {
      return isValidReceiptType() && isValidReceiptSize();
    }

    // ==========================================
    // قواعد مستندات KYC - مبسطة وأكثر أماناً
    // ==========================================

    match /kyc-documents/{userId}/{documentType}/{fileName} {
      // السماح بالرفع والتحديث للمستخدم نفسه فقط
      allow create, update: if isOwner(userId) && isValidKYCImage();

      // السماح بالقراءة للمستخدم نفسه أو المسؤول
      allow read: if isOwner(userId) || isAdmin();

      // منع الحذف
      allow delete: if false;
    }

    // ==========================================
    // قواعد إيصالات Top-up
    // ==========================================

    match /receipts/{userId}/{fileName} {
      // السماح بالرفع والتحديث للمستخدم نفسه فقط
      allow create, update: if isOwner(userId) && isValidReceipt();

      // السماح بالقراءة للمستخدم نفسه أو المسؤول
      allow read: if isOwner(userId) || isAdmin();

      // منع الحذف
      allow delete: if false;
    }

    // ==========================================
    // قواعد صور الملف الشخصي (Profile Avatars)
    // ==========================================

    match /avatars/{userId}/{fileName} {
      // السماح بالرفع والتحديث للمستخدم نفسه فقط
      allow create, update: if isOwner(userId) &&
                               isValidImageType() &&
                               request.resource.size <= 2 * 1024 * 1024;

      // السماح بالقراءة للجميع (الصور الشخصية عامة)
      allow read: if true;

      // السماح بالحذف للمستخدم نفسه فقط
      allow delete: if isOwner(userId);
    }

    // ==========================================
    // قواعد صور الوكلاء
    // ==========================================

    match /agent-avatars/{fileName} {
      // السماح بالرفع والتحديث للمسؤولين فقط
      allow create, update: if isAdmin() &&
                               isValidImageType() &&
                               request.resource.size <= 2 * 1024 * 1024;

      // السماح بالقراءة للجميع
      allow read: if true;

      // السماح بالحذف للمسؤولين فقط
      allow delete: if isAdmin();
    }

    // ==========================================
    // منع الوصول لأي مسارات أخرى
    // ==========================================

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
